<Window x:Class="MatchThePairs.Views.CustomSizeView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MatchThePairs.Views"
        mc:Ignorable="d"
        Title="Custom Table Size" Height="250" Width="300"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Window.Resources>
        <Style x:Key="MenuButtons" TargetType="Button">
            <Setter Property="Background" Value="#C1CFA1" />
            <Setter Property="Foreground" Value="#5F8B4C" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Padding" Value="10,5" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="#A5B68D" />
        </Style>
        <Style x:Key="InputLabels" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#5F8B4C" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="5" />
        </Style>
    </Window.Resources>

    <Grid Background="#EDE8DC">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock 
            Grid.Row="0"
            Text="Set Custom Table Size" 
            FontSize="16" 
            FontWeight="Bold"
            Foreground="#B17F59"
            HorizontalAlignment="Center"
            Margin="10" />

        <Grid Grid.Row="1" Margin="20,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock 
                Grid.Row="0" 
                Grid.Column="0" 
                Text="Width (X):" 
                Style="{StaticResource InputLabels}"/>
            <TextBox 
                x:Name="WidthTextBox" 
                Grid.Row="0" 
                Grid.Column="1" 
                Margin="5"
                Background="#C9B194"
                Foreground="#B17F59"
                BorderBrush="#B17F59"
                BorderThickness="2"
                Text="{Binding Width, UpdateSourceTrigger=PropertyChanged}"/>

            <TextBlock 
                Grid.Row="1" 
                Grid.Column="0" 
                Text="Height (Y):" 
                Style="{StaticResource InputLabels}"/>
            <TextBox 
                x:Name="HeightTextBox" 
                Grid.Row="1" 
                Grid.Column="1" 
                Margin="5"
                Background="#C9B194"
                Foreground="#B17F59"
                BorderBrush="#B17F59"
                BorderThickness="2"
                Text="{Binding Height, UpdateSourceTrigger=PropertyChanged}"/>
        </Grid>

        <StackPanel 
            Grid.Row="2" 
            Orientation="Horizontal" 
            HorizontalAlignment="Center" 
            Margin="0,10">
            <Button 
                Content="Confirm" 
                Style="{StaticResource MenuButtons}"
                Command="{Binding CommandConfirm}"/>
            <Button 
                Content="Cancel" 
                Style="{StaticResource MenuButtons}"
                Command="{Binding CommandCancel}"/>
        </StackPanel>
    </Grid>
</Window>