<Window x:Class="MatchThePairs.Views.MainWindow"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
            xmlns:views="clr-namespace:MatchThePairs.Views"
            xmlns:vms="clr-namespace:MatchThePairs.ViewModels"
            mc:Ignorable="d" 
            Height="450" 
            Width="800"
            Title="The Best Pair Matching Memory Game EVEEEER"
            WindowStartupLocation="CenterScreen"
            ResizeMode="CanMinimize">

    <Window.Resources>
        <Style x:Key="MenuButtons" TargetType="Button">
            <Setter Property="Background" Value="#C1CFA1" />
            <Setter Property="Foreground" Value="#5F8B4C" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Padding" Value="10,5" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="#A5B68D" />
            
        </Style>
        <Style x:Key="ScrollButtons" TargetType="Button">
            <Setter Property="Background" Value="#C1CFA1" />
            <Setter Property="Foreground" Value="#5F8B4C" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="#A5B68D" />
        </Style>
    </Window.Resources>

    <Window.DataContext>
        <vms:MainWindowViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid Background="#EDE8DC">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock 
                Grid.Row="0" Grid.ColumnSpan="8"
                Text = "Welcome to the Game!" 
                FontSize="20" 
                FontFamily="Consolas"
                FontWeight="Bold"
                Foreground="#B17F59"
                HorizontalAlignment="Center"
                VerticalAlignment="Center" />

            <Border
                Grid.Row="2"
                Grid.Column="1"
                Grid.RowSpan="4"
                Grid.ColumnSpan="3"
                BorderThickness="3"
                BorderBrush="#B17F59">
                
                <ListBox 
                ItemsSource="{Binding Users}"
                SelectedItem="{Binding SelectedUser}"
                Background="#C9B194">

                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="110"/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="80"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock 
                                Grid.Column="0"
                                Text="{Binding Name}" 
                                FontSize="14" 
                                FontWeight="Bold"
                                Margin="5"
                                Foreground="#EDE8DC"
                                HorizontalAlignment="Left"/>
                                <TextBlock 
                                Grid.Column="1"
                                Text="{Binding GamesPlayed, StringFormat=Games: {0}}" 
                                FontSize="14" 
                                FontWeight="Bold"
                                Foreground="#EDE8DC"
                                Margin="5" />
                                <TextBlock 
                                Grid.Column="2"
                                Text="{Binding TimeScore, StringFormat=Score: {0}}" 
                                FontSize="14" 
                                FontWeight="Bold"
                                Foreground="#EDE8DC"
                                Margin="5"/>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Border>

            <Border
                Grid.Row="2"
                Grid.Column="5"
                Grid.RowSpan="4"
                Grid.ColumnSpan="2"
                Height="135"
                Width="135"
                BorderThickness="3"
                BorderBrush="#B17F59"
                Background="#C9B194">
                <Image
                    Source="{Binding SelectedUser.ImagePath}"
                    Stretch="Fill"/>
            </Border>

            <Button Content="↑"
                FontSize="12"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Style="{StaticResource ScrollButtons}"
                Width="20"
                Height="20"
                Grid.Row="3"
                Grid.Column="4"
                Command="{Binding CommandPrevUser}"/>

            <Button Content="↓"
                FontSize="12"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Style="{StaticResource ScrollButtons}"
                Width="20"
                Height="20"
                Grid.Row="4"
                Grid.Column="4"
                Command="{Binding CommandNextUser}"/>

            <Grid Grid.Row="7"
              Grid.Column="1"
              Grid.ColumnSpan="6">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Content="New User"
                    Grid.Column="0"
                    Style="{StaticResource MenuButtons}"
                    Command="{Binding CommandNewUser}"/>
                <Button Content="Delete User"
                    Grid.Column="1"
                    Command="{Binding CommandDeleteUser}"
                    Style="{StaticResource MenuButtons}"/>
                <Button Content="Play"
                    Grid.Column="2"
                    Style="{StaticResource MenuButtons}"
                    Command="{Binding CommandOpenPlayGameWindow}"/>
                <Button Content="Cancel"
                    Grid.Column="3"
                    Style="{StaticResource MenuButtons}"
                    Command="{Binding CommandCancelButton}"/>
            </Grid>
        </Grid>
    </Grid>
</Window>